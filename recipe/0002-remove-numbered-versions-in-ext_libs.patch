Subject: [PATCH 2/2] remove numbered versions in ext_libs

---
 ext_libs/ext_libs.cmake | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/ext_libs/ext_libs.cmake b/ext_libs/ext_libs.cmake
index f4fe4c626..0b2e965d2 100644
--- a/ext_libs/ext_libs.cmake
+++ b/ext_libs/ext_libs.cmake
@@ -3,7 +3,7 @@ set(CMAKE_POSITION_INDEPENDENT_CODE ON)
 
 if(FMT_SYS_DEP)
   # fmt was initially built against 7.1.3. Its possible earlier versions will also work, but that needs to be tested
-  find_package(fmt 7.1.3 REQUIRED)
+  find_package(fmt REQUIRED)
 else()
   if(VW_INSTALL)
     set(FMT_INSTALL ON CACHE BOOL "install fmt library" FORCE)
@@ -15,7 +15,7 @@ if(SPDLOG_SYS_DEP)
   # use header-only mode with system-installed spdlog to ensure a consistent version of fmt is used
   set(spdlog_target spdlog::spdlog_header_only)
   # spdlog was initially built against 1.8.2. Its possible earlier versions will also work, but that needs to be tested
-  find_package(spdlog 1.8.2 CONFIG REQUIRED)
+  find_package(spdlog CONFIG REQUIRED)
 else()
   set(spdlog_target spdlog::spdlog)
   set(SPDLOG_FMT_EXTERNAL ON CACHE BOOL "Enable external FMTLIB in spdlog" FORCE)
@@ -28,7 +28,7 @@ endif()
 # RapidJson has a bit of logic on which version to use based on the RAPIDJSON_SYS_DEP option
 if(RAPIDJSON_SYS_DEP)
   # Since EXACT is not specified, any version compatible with 1.1.0 is accepted (>= 1.1.0)
-  find_package(RapidJSON 1.1.0 CONFIG REQUIRED)
+  find_package(RapidJSON CONFIG REQUIRED)
   add_library(RapidJSON INTERFACE)
   target_include_directories(RapidJSON INTERFACE ${RapidJSON_INCLUDE_DIRS})
 else()
